package lab4;

//Класс точки (x;y)

public class Point {

    private int x; // X-координата

    private int y; // Y-координата

// Конструктор. X-координата. Y-координата

    public Point(int x, int y) {

        this.x = x;

        this.y = y;

    }

// Геттер для X-координаты

    public int getX() {

        return x;

    }

// Сеттер для X-координаты

    public void setX(int x) {

        this.x = x;

    }

// Геттер для Y-координаты

    public int getY() {

        return y;

    }

// Сеттер для Y-координаты

    public void setY(int y) {

        this.y = y;

    }

}
